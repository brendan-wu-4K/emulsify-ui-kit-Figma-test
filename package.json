{
  "name": "4k-ui-kit",
  "version": "0.0.0-development",
  "description": "Four Kitchens UI Kit",
  "keywords": [
    "component library",
    "design system",
    "pattern library",
    "storybook",
    "style guide"
  ],
  "author": "Four Kitchens <shout@fourkitchens.com>",
  "license": "ISC",
  "scripts": {
    "build": "webpack --config ./webpack/webpack.prod.js",
    "develop": "concurrently --raw \"npm run webpack\" \"npm run storybook\"",
    "husky:pre-commit": "lint-staged",
    "postinstall": "npx patch-package",
    "prepare": "husky install",
    "prettier": "prettier src/components --ignore-unknown --list-different",
    "storybook": "start-storybook --ci -s ./dist,./src/images,./src/fonts -p 6006",
    "storybook-build": "npm run build && build-storybook -s ./dist,./src/images,./src/fonts -o .out",
    "build-storybook": "npm run build && build-storybook -s ./dist,./src/images,./src/fonts -o .out",
    "storybook-deploy": "storybook-to-ghpages -o .out",
    "webpack": "webpack --watch --config ./webpack/webpack.dev.js",
    "tokens": "token-transformer src/tokens/figma.tokens.json src/tokens/sd.tokens.json && node ./src/tokens/tokensTransform.js",
    "tokens:convert": "token-transformer src/tokens/figma.tokens.json src/tokens/sd.tokens.json",
    "tokens:css": "node ./src/tokens/tokensTransform.js",
    "chromatic": "npx chromatic --project-token=decfb1743eec"
  },
  "dependencies": {
    "@storybook/addon-docs": "^6.4.19",
    "add-attributes-twig-extension": "^0.1.0",
    "bem-twig-extension": "^0.1.1",
    "normalize.css": "^8.0.1",
    "token-transformer": "0.0.17",
    "twig-drupal-filters": "^3.1.2"
  },
  "devDependencies": {
    "@babel/core": "^7.16.7",
    "@storybook/addon-a11y": "^6.4.19",
    "@storybook/addon-actions": "^6.4.19",
    "@storybook/addon-essentials": "^6.4.19",
    "@storybook/addon-links": "^6.4.19",
    "@storybook/html": "^6.4.19",
    "@storybook/storybook-deployer": "^2.8.11",
    "babel-loader": "^8.2.3",
    "chromatic": "^6.5.3",
    "clean-webpack-plugin": "^4.0.0",
    "concurrently": "^7.0.0",
    "husky": "^7.0.0",
    "imagemin-webpack-plugin": "^2.4.2",
    "js-yaml-loader": "^1.2.2",
    "lint-staged": "^12.1.6",
    "mini-css-extract-plugin": "^1.6.2",
    "node-sass-glob-importer": "^5.3.2",
    "sass": "^1.47.0",
    "sass-loader": "^10.2.0",
    "storybook-addon-designs": "^6.2.1",
    "style-dictionary": "^3.7.0",
    "style-loader": "^2.0.0",
    "svg-sprite-loader": "^6.0.11",
    "twig-loader": "https://github.com/fourkitchens/twig-loader",
    "webpack": "4.46.0",
    "webpack-cli": "^4.9.2",
    "webpack-merge": "^5.8.0",
    "yaml": "^1.10.0"
  },
  "lint-staged": {
    "src/components/**/*.{js,yml,scss,md}": [
      "npm run prettier -- --write"
    ]
  }
}
