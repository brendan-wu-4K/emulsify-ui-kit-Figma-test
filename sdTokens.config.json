{
  "source": [
    "src/tokens/transformed.tokens.json"
  ],
  "platforms": {
    "css": {
      "transformGroup": "tokens-studio",
      "files": [
        {
          "destination": "src/components/tokens/_tokens.scss",
          "format": "css/variables"
        }
      ]
    },
    "foo": {
      "transforms": [
        "attribute/cti",
        "name/cti/kebab",
        "time/seconds",
        "content/icon",
        "color/css",
        "toRem/pxToRem",
        "toPX/appendPX"
      ],
      "files": [
        {
          "destination": "src/components/tokens/_tokens-foo.css",
          "format": "css/variables"
        }
      ]
    }
  }
}